@page "/"
@using Syncfusion.Blazor.TreeGrid
@using Grids = Syncfusion.Blazor.Grids;
@using Syncfusion.Blazor.Grids;
@using TreeGrid = Syncfusion.Blazor.TreeGrid;


<SfTreeGrid DataSource="@TreeData" IdMapping="TaskID" ParentIdMapping="ParentID" TreeColumnIndex="1">
    <TreeGridColumns>
        <TreeGridColumn Field="TaskID" HeaderText="Task ID" Width="80" TextAlign="Grids.TextAlign.Right"></TreeGridColumn>
        <TreeGridColumn Field="TaskName" HeaderText="Task Name" Width="160"></TreeGridColumn>
        <TreeGridColumn Field="StartDate" HeaderText="Start Date" Width="150" Format="d"
                        EditType="Grids.EditType.DateTimePickerEdit"></TreeGridColumn>
        <TreeGridColumn Field="Duration" HeaderText="Duration" Width="100" TextAlign="Grids.TextAlign.Right"
                        EditType="Grids.EditType.NumericEdit"></TreeGridColumn>
        <TreeGridColumn Field="Progress" HeaderText="Progress" Width="100" TextAlign="Grids.TextAlign.Right"
                        EditType="Grids.EditType.NumericEdit"></TreeGridColumn>
        <TreeGridColumn Field="Approved" HeaderText="Approved" Width="100" DisplayAsCheckBox="true" Type="Grids.ColumnType.Boolean"
                        EditType="Grids.EditType.BooleanEdit"></TreeGridColumn>
    </TreeGridColumns>
</SfTreeGrid>

